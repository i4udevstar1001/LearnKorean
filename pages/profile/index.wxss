/* component/swiper/swiper.wxss */
.container {
  position: relative;  
  background: #EEEEEE;
  display: flex;
  flex-direction: column;
}

.swiper-box{
  width: 100%;  
  height: 560rpx;
}

.targetImg{
  width: 100%;
  height: 560rpx;
}

/*小圆点  */
.dots{  
width: 100%;
  height: 4rpx; 
  display: flex;
}  
.dotsBox {
  height: 4rpx;
  display: flex;
  margin: 0 auto;
} 

/*未选中时的小圆点样式 */
.dot{  
  width: 26rpx;  
  height: 26rpx;   
  border-radius: 50%;
  margin-right: 10rpx;
  background-color: #ce2b2b;
  opacity: 0.4;
}  

/*选中以后的小圆点样式  */
.dot-active{  
  opacity: 1;
} 